{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "healthier",
      "git add"
    ]
  },
  "scripts": {
    "format": "prettier 'models/**/*.js' --write",
    "lint": "prettier --check 'models/**/*.{js,html}' && healthier 'models/**/*.{js,html}'",
    "test": "ava"
  },
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "printWidth": 100,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "camelcase": [
        "warn"
      ]
    }
  },
  "name": "@datawrapper/orm",
  "version": "2.0.0",
  "description": "A database abstraction layer for Datawrapper",
  "author": "Datawrapper GmbH",
  "license": "MIT",
  "files": [
    "models",
    "index.js",
    "sync.js"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datawrapper/orm.git"
  },
  "homepage": "https://github.com/datawrapper/orm#readme",
  "dependencies": {
    "mysql2": "^1.6.4",
    "nanoid": "^2.0.0",
    "sequelize": "^4.41.2",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "ava": "^1.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "healthier": "^2.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4"
  }
}
