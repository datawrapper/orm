{
    "name": "@datawrapper/orm",
    "version": "3.0.2",
    "description": "A database abstraction layer for Datawrapper",
    "homepage": "https://github.com/datawrapper/orm#readme",
    "license": "MIT",
    "author": "Datawrapper GmbH",
    "files": [
        "models",
        "index.js",
        "sync.js"
    ],
    "main": "index.js",
    "scripts": {
        "format": "prettier 'models/**/*.js' --write",
        "lint": "prettier --check 'models/**/*.{js,html}' && healthier 'models/**/*.{js,html}'",
        "test": "ava"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/orm.git"
    },
    "dependencies": {
        "mysql2": "^1.6.4",
        "nanoid": "^2.0.0",
        "sequelize": "^4.41.2",
        "underscore": "^1.9.1"
    },
    "devDependencies": {
        "ava": "^1.1.0",
        "babel-eslint": "^10.0.1",
        "healthier": "^2.0.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "prettier": "^1.16.4"
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "healthier",
            "git add"
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ],
            "no-unused-vars": [
                "off"
            ]
        },
        "root": true
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
